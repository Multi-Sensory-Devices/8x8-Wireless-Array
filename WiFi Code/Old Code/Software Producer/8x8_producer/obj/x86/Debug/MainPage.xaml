<Page
    x:Class="_8x8_producer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="12">
            <TextBlock x:ConnectionId='5' IsTextSelectionEnabled="True" Text="~device~" Name="SelectedDeviceText" Margin="0,0,12,0"/>
        </StackPanel>
        <TextBox x:ConnectionId='2' Name="sendText" HorizontalAlignment="Left" Margin="107,24,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Tx text here" VerticalAlignment="Top" RenderTransformOrigin="0.368,1"/>
        <Button x:ConnectionId='3' Name="SendButton" Content="Button" Margin="21,24,0,0" Grid.Row="1" VerticalAlignment="Top"                         />
        <TextBlock x:ConnectionId='4' Name="receivedText" HorizontalAlignment="Left" Margin="124,77,0,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
    </Grid>
</Page>

