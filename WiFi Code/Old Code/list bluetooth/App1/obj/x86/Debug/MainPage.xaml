<Page
    x:Class="App1.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <StackPanel>
        <TextBox x:ConnectionId='2' x:Name="DeviceIdTextBox" Width="200" Text="{Binding DeviceId}" PlaceholderText="Enter device ID" />
        <Button x:ConnectionId='3' Content="Connect"                             Width="284" />
        <TextBlock x:ConnectionId='4' x:Name="DeviceList" IsTextSelectionEnabled="True" TextWrapping="Wrap" VerticalAlignment="Top" Width="400" Height="400" Text="{Binding Log}" />
    </StackPanel>
</Page>

